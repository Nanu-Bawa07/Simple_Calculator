<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/black">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:textSize="45sp" />

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_margin="2dp">

        <Button
            android:id="@+id/btAc"
            android:text="AC"
            style="@style/FunctionalButtons"
            android:layout_column="0"
            android:layout_row="0"/>
        <Button
            android:id="@+id/btPlusMinus"
            android:text="+/-"
            style="@style/FunctionalButtons"
            android:layout_column="1"
            android:layout_row="0"/>
        <Button
            android:id="@+id/btModulus"
            android:text="%"
            style="@style/FunctionalButtons"
            android:layout_column="2"
            android:layout_row="0"/>
        <Button
            android:id="@+id/btDivide"
            android:text="/"
            style="@style/FunctionalButtons1"
            android:layout_column="3"
            android:layout_gravity="end"
            android:layout_row="0"/>
        <Button
            android:id="@+id/bt7"
            android:text="7"
            style="@style/FunctionalButtons"
            android:layout_column="0"
            android:layout_row="1"/>
        <Button
            android:id="@+id/bt8"
            android:text="8"
            style="@style/FunctionalButtons"
            android:layout_column="1"
            android:layout_row="1"/>
        <Button
            android:id="@+id/bt9"
            android:text="9"
            style="@style/FunctionalButtons"
            android:layout_column="2"
            android:layout_row="1"/>
        <Button
            android:id="@+id/btMul"
            android:text="X"
            style="@style/FunctionalButtons1"
            android:layout_column="3"
            android:layout_gravity="end"
            android:layout_row="1"/>
        <Button
            android:id="@+id/bt4"
            android:text="4"
            style="@style/FunctionalButtons"
            android:layout_column="0"
            android:layout_row="2"/>
        <Button
            android:id="@+id/bt5"
            android:text="5"
            style="@style/FunctionalButtons"
            android:layout_column="1"
            android:layout_row="2"/>
        <Button
            android:id="@+id/bt6"
            android:text="6"
            style="@style/FunctionalButtons"
            android:layout_column="2"
            android:layout_row="2"/>
        <Button
            android:id="@+id/btSub"
            android:text="-"
            style="@style/FunctionalButtons1"
            android:layout_column="3"
            android:layout_gravity="end"
            android:layout_row="2"/>
        <Button
            android:id="@+id/bt1"
            android:text="1"
            style="@style/FunctionalButtons"
            android:layout_column="0"
            android:layout_row="3"/>
        <Button
            android:id="@+id/bt2"
            android:text="2"
            style="@style/FunctionalButtons"
            android:layout_column="1"
            android:layout_row="3"/>
        <Button
            android:id="@+id/bt3"
            android:text="3"
            style="@style/FunctionalButtons"
            android:layout_column="2"
            android:layout_row="3"/>
        <Button
            android:id="@+id/btAdd"
            android:text="+"
            style="@style/FunctionalButtons1"
            android:layout_column="3"
            android:layout_gravity="end"
            android:layout_row="3"/>
        <Button
            android:id="@+id/bt0"
            android:text="0"
            style="@style/FunctionalButtons"
            android:layout_column="0"
            android:layout_row="4"/>
        <Button
            android:id="@+id/btDot"
            android:text="."
            style="@style/FunctionalButtons"
            android:layout_column="1"
            android:layout_row="4"/>
        <Button
            android:id="@+id/btDel"
            android:text="DEL"
            style="@style/FunctionalButtons"
            android:layout_column="2"
            android:layout_row="4"/>
        <Button
            android:id="@+id/btResult"
            android:text="="
            style="@style/FunctionalButtons1"
            android:layout_column="3"
            android:layout_gravity="end"
            android:layout_row="4"/>

    </GridLayout>


</LinearLayout>